<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <p>ユーザー名</p>
        <%= @user.name %>
      <p>プロフィール</p>
      <%= @user.profile %>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.movies.any? %>
      <h3>Movies (<%= @user.movies.count %>)</h3>
      <ol class="movies">
        <%= render @movies %>
      </ol>
      <%= paginate @movies %>
    <% end %>
  </div>
</div>