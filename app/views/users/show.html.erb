<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <p>ユーザー名</p>
        <%= @user.name %>
      <p>プロフィール</p>
      <%= @user.profile %>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.playlists.any? %>
      <h3>Playlists (<%= @user.playlists.count %>)</h3>
      <ol class="playlists">
        <%= render @playlists %>
      </ol>
      <%= paginate @playlists %>
    <% end %>
  </div>
</div>